{
  "name": "@portaldefi/testing",
  "version": "0.0.0",
  "description": "PortalDefi Testing Framework",
  "scripts": {
    "clean": "rm -rf node_modules",
    "clean:all": "npm run clean && npm run clean:lock",
    "clean:lock": "rm -f package-lock.json",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "start": "node bin/portal",
    "test": "mocha test/browser",
    "test:browser": "mocha test/browser",
    "test:node": "mocha test/node",
    "watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@parcel/core": "^2.11.0",
    "@portaldefi/app": "file:../app",
    "@portaldefi/coordinator": "file:../coordinator",
    "@portaldefi/core": "file:../core",
    "@portaldefi/peer": "file:../peer",
    "@portaldefi/sdk": "file:../sdk",
    "chai": "^4.3.7",
    "keythereum": "^2.0.0",
    "mocha": "^10.2.0",
    "puppeteer": "^21.7.0",
    "solc": "^0.7.6",
    "solhint": "^3.3.7",
    "standard": "^17.0.0",
    "vite": "^5.0.9",
    "web3": "^4.1.2"
  },
  "mocha": {
    "bail": true,
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 600000,
    "ui": "bdd",
    "watch-files": [
      "../**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "debug",
      "fetch",
      "WebSocket"
    ],
    "ignore": [
      "dist"
    ]
  }
}
