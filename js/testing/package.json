{
  "name": "@portaldefi/testing",
  "version": "0.0.0",
  "description": "PortalDefi Testing Framework",
  "scripts": {
    "clean": "rm -rf node_modules",
    "clean:all": "npm run clean && npm run clean:lock",
    "clean:lock": "rm -f package-lock.json",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "start": "node bin/portal",
    "test": "mocha",
    "coverage": "npx hardhat coverage",
    "watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@portaldefi/app": "file:../app",
    "@portaldefi/core": "file:../core",
    "@portaldefi/coordinator": "file:../coordinator",
    "@portaldefi/peer": "file:../peer",
    "@portaldefi/sdk": "file:../sdk",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/hardhat": "^9.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.2",
    "hardhat-deploy": "^0.11.37",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.4",
    "chai": "^4.3.7",
    "keythereum": "^2.0.0",
    "mocha": "^10.2.0",
    "solc": "^0.7.6",
    "solhint": "^3.3.7",
    "standard": "^17.0.0",
    "vite": "^5.0.9",
    "@openzeppelin/contracts": "^5.0.0",
    "web3": "^4.1.2"
  },
  "mocha": {
    "bail": true,
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 30000,
    "ui": "bdd",
    "watch-files": [
      "../**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "debug",
      "fetch",
      "WebSocket"
    ]
  }
}
