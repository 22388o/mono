{
  "name": "@portaldefi/app",
  "version": "0.0.0",
  "description": "The Portal App",
  "source": "src/index.html",
  "scripts": {
    "build": "parcel build",
    "clean": "rm -rf node_modules package-lock.json",
    "clean:build": "rm -rf dist .parcel-cache",
    "coverage": "c8 mocha",
    "dev": "concurrently \"npm run watch\" \"nodemon bin/dev.js\"",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "test": "mocha",
    "test:jest": "jest --env=jsdom -u --coverage --silent",
    "test:swap": "node test/ui/test_btc2eth.js",
    "watch": "parcel watch src/index.html"
  },
  "devDependencies": {
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.6",
    "@mui/material": "^5.15.6",
    "@portaldefi/coordinator": "file:../coordinator",
    "@portaldefi/peer": "file:../peer",
    "@portaldefi/sdk": "file:../sdk",
    "concurrently": "^8.2.2",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.3",
    "parcel": "^2.11.0",
    "puppeteer": "^21.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "react-toastify": "^10.0.4",
    "standard": "^17.0.0"
  },
  "jest": {
    "testRegex": "\\.test\\.js$",
    "testPathIgnorePatterns": [
      "<rootDir>/.yalc/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "testEnvironment": "jest-environment-jsdom"
  },
  "mocha": {
    "bail": true,
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 120000,
    "ui": "bdd",
    "watch-files": [
      "src/**/*.js",
      "test/**/*.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "*.*", 
      "src",
      "dist"
    ],
    "ignore": [
      "node_modules/",
      "dist",
      "coverage",
      ".parcel-cache",
      "__mocks__"
    ],
    "exec": "node bin/dev.js",
    "ext": "js,html,css"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it"
    ],
    "ignore": [
      "dist"
    ]
  }
}
