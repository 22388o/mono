{
  "name": "@portaldefi/app",
  "version": "0.0.0",
  "description": "The Portal App",
  "source": "src/index.html",
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf dist node_modules package-lock.json",
    "coverage": "c8 mocha",
    "dev": "node bin/dev.js",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "test": "mocha",
    "test:jest": "jest --env=jsdom -u --coverage",
    "test:swap": "node test/ui/test_btc2eth.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@babel/register": "^7.22.5",
    "@cucumber/cucumber": "^9.3.0",
    "@mui/icons-material": "^5.11.11",
    "@mui/material": "^5.11.13",
    "@portaldefi/peer": "file:../portal",
    "@portaldefi/sdk": "file:../sdk",
    "@vitejs/plugin-react": "^2.2.0",
    "babel": "^6.23.0",
    "babel-jest": "^29.5.0",
    "browserify": "^17.0.0",
    "buffer": "^6.0.3",
    "c8": "^7.12.0",
    "chai": "^4.3.7",
    "chokidar": "^3.5.3",
    "classnames": "^2.3.2",
    "fs": "^0.0.1-security",
    "jest-environment-jsdom": "^29.5.0",
    "mocha": "^10.2.0",
    "path": "^0.12.7",
    "postcss": "8.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.1",
    "react-test-renderer": "^18.2.0",
    "react-toastify": "^9.1.2",
    "sats-connect": "^0.2.0",
    "standard": "^17.0.0",
    "vite": "^3.2.4"
  },
  "jest": {
    "testRegex": "\\.test\\.js$",
    "testPathIgnorePatterns": [
      "<rootDir>/.yalc/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "c8": {
    "check-coverage": true,
    "report-dir": "coverage",
    "reporter": [
      "html",
      "text"
    ]
  },
  "mocha": {
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 120000,
    "ui": "bdd",
    "watch-files": [
      "src/**/*.js",
      "test/**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it"
    ],
    "ignore": [
      "dist"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "jest": "^29.7.0",
    "puppeteer": "^21.7.0"
  }
}
