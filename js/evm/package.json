{
  "name": "@portaldefi/contracts",
  "version": "0.0.0",
  "description": "EVM contracts for Portal",
  "main": "lib/index.js",
  "scripts": {
    "build": "node build.js",
    "clean": "rm -rf build node_modules package-lock.json",
    "lint": "solhint contracts/*.sol",
    "lint-fix": "solhint --fix contracts/*.sol",
    "posttest": "npm run lint",
    "test": "mocha"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "keythereum": "^2.0.0",
    "mocha": "^10.2.0",
    "solc": "^0.7.6",
    "solhint": "^3.3.7",
    "standard": "^17.0.0",
    "web3": "^1.8.2"
  },
  "mocha": {
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 120000,
    "ui": "bdd",
    "watch-files": [
      "contracts/**/*.sol",
      "lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "expect",
      "it"
    ]
  }
}
