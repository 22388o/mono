{
  "name": "@portaldefi/smartcontracts",
  "version": "0.0.0",
  "description": "Portal Defi Smart Contracts for Ethereum",
  "scripts": {
    "clean": "rm -rf node_modules",
    "clean:all": "npm run clean && npm run clean:lock",
    "clean:lock": "rm -f package-lock.json",
    "lint": "solhint contracts/*.sol",
    "lint-fix": "npm run lint -- --fix",
    "posttest": "npm run lint",
    "test": "hardhat test || exit 0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.19.4",
    "solc": "^0.7.6",
    "solhint": "^3.3.7"
  }
}
