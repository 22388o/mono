{
  "name": "portal",
  "version": "0.0.0",
  "description": "The Portal backend",
  "bin": {
    "portal": "bin/portal.js"
  },
  "scripts": {
    "clean": "rm -rf coverage node_modules package-lock.json",
    "coverage": "c8 mocha",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "test": "mocha"
  },
  "dependencies": {
    "web3-legacy": "github:melnx/web3.js#0.20.7"
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "standard": "^17.0.0"
  },
  "c8": {
    "check-coverage": true,
    "report-dir": "coverage",
    "reporter": [
      "html",
      "text"
    ]
  },
  "mocha": {
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 60000,
    "ui": "bdd",
    "watch-files": [
      "lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it"
    ]
  }
}
