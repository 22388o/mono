{
  "name": "@portaldefi/sdk",
  "version": "0.0.0",
  "description": "The Portal-Defi SDK",
  "source": "lib/index.js",
  "main": "dist/index.js",
  "module": "dist/module.js",
  "targets": {
    "main": {
      "context": "node",
      "outputFormat": "commonjs",
      "optimize": false,
      "includeNodeModules": true
    },
    "module": {
      "context": "browser",
      "outputFormat": "esmodule",
      "optimize": false,
      "includeNodeModules": true
    }
  },
  "scripts": {
    "build": "parcel build",
    "clean": "rm -rf .parcel-cache dist node_modules package-lock.json",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "test": "mocha",
    "watch": "parcel watch"
  },
  "dependencies": {
    "@portaldefi/core": "file:../core",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.11.0",
    "@portaldefi/coordinator": "file:../coordinator",
    "@portaldefi/peer": "file:../peer",
    "chai": "^4.4.1",
    "crypto-browserify": "^3.12.0",
    "events": "^3.3.0",
    "mocha": "^10.2.0",
    "parcel": "latest",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "punycode": "^1.4.1",
    "puppeteer": "^21.7.0",
    "standard": "^17.1.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.3",
    "web3": "^4.3.0"
  },
  "mocha": {
    "bail": true,
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 60000,
    "ui": "bdd",
    "watch-files": [
      "lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "debug",
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "expect",
      "it"
    ],
    "ignore": [
      "dist",
      "test/dist"
    ]
  }
}
