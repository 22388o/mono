{
  "name": "@portaldefi/sdk",
  "version": "0.0.0",
  "description": "The Portal-Defi SDK",
  "main": "index.js",
  "exports": {
    "import": "./index.mjs",
    "require": "./index.js"
  },
  "scripts": {
    "build": "parcel build",
    "clean": "rm -rf .parcel-cache dist node_modules package-lock.json test/dist",
    "coverage": "c8 mocha",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "test": "mocha test/unit",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "@portaldefi/core": "file:../core",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "parcel": "^2.9.3",
    "puppeteer": "^20.9.0",
    "standard": "^17.0.0"
  },
  "mocha": {
    "bail": true,
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 60000,
    "ui": "bdd",
    "watch-files": [
      "lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "debug",
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "expect",
      "it"
    ],
    "ignore": [
      "dist"
    ]
  }
}