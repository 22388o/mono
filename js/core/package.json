{
  "name": "@portaldefi/core",
  "version": "0.0.0",
  "description": "The core types for PortalDefi",
  "main": "index.js",
  "browser": "index.mjs",
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "test": "mocha",
    "watch": "mocha --watch"
  },
  "dependencies": {
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "crypto-browserify": "^3.12.0",
    "events": "^3.3.0",
    "mocha": "^10.2.0",
    "process": "^0.11.10",
    "puppeteer": "^21.6.0",
    "standard": "^17.0.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.3"
  },
  "mocha": {
    "bail": true,
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 2000,
    "ui": "bdd",
    "watch-files": [
      "**/*.js",
      "**/*.spec.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "debug",
      "describe",
      "expect",
      "it"
    ]
  }
}
