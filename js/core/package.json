{
  "name": "@portaldefi/core",
  "version": "0.0.0",
  "description": "The core types for PortalDefi",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf node_modules",
    "clean:all": "npm run clean && npm run clean:lock",
    "clean:lock": "rm -f package-lock.json",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "test": "mocha",
    "watch": "mocha --watch"
  },
  "dependencies": {
    "mime": "^3.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "puppeteer": "^21.6.0",
    "standard": "^17.0.0",
    "vite": "^5.0.7"
  },
  "c8": {
    "check-coverage": true,
    "report-dir": "coverage",
    "reporter": [
      "html",
      "text"
    ]
  },
  "mocha": {
    "bail": true,
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 2000,
    "ui": "bdd",
    "watch-files": [
      "**/*.js",
      "**/*.spec.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "debug",
      "describe",
      "expect",
      "it"
    ]
  }
}
