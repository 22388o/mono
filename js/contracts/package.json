{
  "name": "@portal/contracts",
  "version": "0.0.0",
  "description": "EVM contracts for Portal",
  "scripts": {
    "build": "node bin/compile.js",
    "clean": "rm -rf node_modules package-lock.json",
    "lint": "solhint contracts/*.sol",
    "lint-fix": "solhint --fix contracts/*.sol",
    "posttest": "npm run lint",
    "test": "mocha test"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "solc": "^0.7.6",
    "solhint": "^3.3.7",
    "web3": "^1.8.2"
  },
  "mocha": {
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 120000,
    "ui": "bdd",
    "watch-files": [
      "lib/**/*.js",
      "test/**/*.js"
    ]
  }
}
